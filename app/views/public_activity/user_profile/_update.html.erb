<li class="list-group-item">
  <span class="glyphicon glyphicon-edit"></span>
  <small class="text-muted"><%= a.created_at.strftime('%H:%M:%S %-d %B %Y') %></small><br/>
  <strong><%= activity.owner ? activity.owner.login : 'Guest' %></strong>
  <% if a.trackable %>
    updated their user profile <%= link_to "user profile", user_profile_path(a.trackable) %>.
  <% else %>
    edited the profile that is currently deleted.
  <% end %>
</li>
