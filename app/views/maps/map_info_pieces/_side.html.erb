<nav id='photo-manager-nav' class='six row group'>

	<ul class='inline-list sort-list row group twenty-two h-righted'>
		<li class='item pull-left offset-one'>Photo Manager</li>
		<li id='photo-upload' class='item cursor-point'>
			<i class='fa fa-upload'></i>
				<%= form_for [@user_gallery, @photo], :multipart => true , :remote => true do %>
				<input id='photo-upload-input' type='file' name='photo[photo_file]' multiple/>
		    <input type="hidden" name="user-gal-id" id= "user-gal-id" value= <%=@user_gallery[:id]%>>
			<% end %>
		</li>
	</ul>
</nav>

	<ul class='inline-list filter-list h-centered row group font_small'>
		<li class="filter-type item active" data-filter="all">All</li>
		<li class="filter-type item" data-filter=".aerial">Aerial</li>
		<li class="filter-type item" data-filter=".normal">Street View</li>
		<li class="filter-type item" data-filter=".people">People</li>
		<li class="sort sort-item item cursor-point active" data-sort="created:desc">
			<i class='fa fa-sort-amount-desc'></i>
		</li>
		<li class="sort sort-item item cursor-point" data-sort="created:asc">
			<i class='fa fa-sort-amount-asc'></i>
		</li>
	</ul>

<section id='preview-list'>

	<% @gallery_photos.each do |photo| %>
	<% if photo.is_aerial %>
	<% type = 'aerial' %>
	<article id='preview-<%=photo.id%>' class='preview mix aerial saved cursor-point draggable img-wrapper' data-img-id='<%=photo.id%>' data-img-type='<%=type%>' data-warpable-id='<%=photo.warpable_id%>' data-warpable-url='<%=photo.warpable_url%>' data-created='<%=photo.created_at.to_i%>' style="background-image:url('<%=photo.photo_file%>')">
	<% elsif photo.is_normal %>
	<% type = 'normal' %>
	<article id='preview-<%=photo.id%>' class='preview mix normal saved cursor-point draggable img-wrapper' data-img-id='<%=photo.id%>' data-img-type='<%=type%>' data-warpable-id='<%=photo.warpable_id%>' data-warpable-url='<%=photo.warpable_url%>' data-created='<%=photo.created_at.to_i%>'style="background-image:url('<%=photo.photo_file%>')">
	<% end %>					
					<button class='photo-remove font_small h-centered hidden'><i class='fa fa-remove'></i></button>
				</article>
	<% end %>

	<% @gallery_photos.each do |photo| %>
	<% if photo.is_aerial %>
	<% type = 'aerial' %>
	<article id='preview-<%=photo.id%>' class='preview mix aerial saved cursor-point draggable img-wrapper' data-img-id='<%=photo.id%>' data-img-type='<%=type%>' data-warpable-id='<%=photo.warpable_id%>' data-warpable-url='<%=photo.warpable_url%>'data-created='<%=photo.created_at.to_i%>'  style="background-image:url('<%=photo.photo_file%>')">
	<% elsif photo.is_normal %>
	<% type = 'normal' %>
	<article id='preview-<%=photo.id%>' class='preview mix normal saved cursor-point draggable img-wrapper' data-img-id='<%=photo.id%>' data-img-type='<%=type%>' data-warpable-id='<%=photo.warpable_id%>' data-warpable-url='<%=photo.warpable_url%>' style="background-image:url('<%=photo.photo_file%>')">
	<% end %>		
					<button class='photo-remove font_small h-centered hidden'><i class='fa fa-remove'></i></button>
				</article>
	<% end %>

</section>



<%= javascript_include_tag "/javascripts/jquery-file-upload/jquery.fileupload.js" %>
