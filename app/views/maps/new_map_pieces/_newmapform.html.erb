<%= form_for @map, :html => { :id => 'project-create' } do |f| %>
  <%= render 'layouts/error_messages', object: f.object %>

  <div class='row group'>
    <div class='twelve columns'>
      <h1 class='project-title first-header'>
        <%= f.label :name, 'Title', :class => 'font_small' %>
        <%=  f.text_area :name,
                         :name => 'name',
                         :rows => '0',
                         :class => 'char-limited',
                         :id => 'project-title',
                         :placeholder => 'Title',
                         :maxlength => 70 %>
        <input type="hidden" name="map_id" id="project-id">
        <span class='char-limit font_small light hidden' data-limit='70'>70</span>
      </h1>
    </div>
  </div> <!-- end project-title -->

  <div class='row group'>
    <div class='eight columns'>
      <%= f.label :location, 'Location', :class => 'font_small' %>
      <%= f.text_field :location,
               :id => 'map_location',
               :placeholder => 'Location' %>
      <div class='row group'>
        <div class='six columns'>
          <%= f.label :lat, 'Latitude', :class => 'font_small' %>
          <%= f.text_field :lat,
            :id => 'map_lat',
            :placeholder => 'Latitude' %>
            <input type="hidden" name="map_id" id="project-id">
        </div>
        <div class='six columns'>
          <%= f.label :lon, 'Longitude', :class => 'font_small' %>
          <%= f.text_field :lon,
            :id => 'map_lon',
            :placeholder => 'Longitude' %>
          <input type="hidden" name="map_id" id="project-id">
        </div>
      </div>
    </div>
  </div> <!-- end project-location -->

  <div class='row group'>
    <p class='project-description'>
      <%= f.label :title, 'Description', :class => 'font_small' %>
      <%=  f.text_area :description,
                       :rows => '0',
                       :class => 'char-limited',
                       :id => 'project-description',
                       :placeholder => 'Description',
                       :maxlength => 550 %>
      <span class='char-limit light hidden' data-limit='550'>550</span>
      <input type="hidden" name="map_id" id="project-id">
    </p>
  </div> <!-- end project-description -->

  <div class='row group'>
    <div class='twelve columns'>
      <%= f.label :tags, 'Tags', :class => 'font_small' %>
      <%#=  f.text_field :tags,
                       :class => 'tag-input',
                       :id => 'project-tag-list',
                       :placeholder => '#tags' %>
      <textarea id='project-tag-list' class='tag-input' placeholder='#tags'></textarea>
      <div id='tag-container' class='tag-container'></div>
      <input type="hidden" name="map_id" id="project-id">
    </div>
  </div>

  <button class='next'>
    <%= f.submit "Next" %>
  </button>

<% end %>