<li class="list-group-item">
  <span class="glyphicon glyphicon-plus"></span>
  <small class="text-muted"><%= a.created_at.strftime('%H:%M:%S %-d %B %Y') %></small><br/>
  <strong><%= activity.owner ? activity.owner.login : 'Guest' %></strong>
  <% if a.trackable %>
    added the project <%= link_to a.trackable.name, map_path(a.trackable) %>.
  <% else %>
    added the project that is currently deleted.
  <% end %>
</li>
