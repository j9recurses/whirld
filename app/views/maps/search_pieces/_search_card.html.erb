<article class='search-card mix' data-map-id='1' data-updated='2' data-relevant='1'>
	<a href='maps_path(card.name)' class="sc-cover uk-cover-background uk-overlay" style="background-image: url('<%=card.coverphoto_name%>');">
	    <img class="uk-invisible" src="<%=card.coverphoto_name%>" alt="Placeholder image for card.name">
	</a>
	<div class='uk-grid uk-grid-collapse'>
		<div class='sc-activity uk-width-2-10 uk-text-center'>
			<p>
				<i class='fa fa-users wh-text-green' data-uk-tooltip title="No. of colaborators"></i>
				<br><span id='sc-collabo-count' class='uk-text-small uk-text-muted'><%=card.collaborator_list.size %></span>
			</p>
			<p>
				<i class='fa fa-comment wh-text-green'></i>
				<br><span id='sc-comment-count' class='uk-text-small uk-text-muted'><%=card.comment_count %></span>
			</p>
			<p>
				<i class='fa fa-heart wh-text-green'></i> <br>
				<span id='sc-whirl-count' class='uk-text-small uk-text-muted' data-uk-tooltip title="No. of Whirls"><%= card.whirls %></span>
			</p>
		</div>

		<div class='sc-main uk-width-8-10'>
			<div class='sc-header'>
				<h1 class='sc-title uk-h4 wh-caps uk-text-bold'>
					<a href='maps_path(card.name)'><%=card.name%></a>
				</h1>
			</div>
			<div class='sc-meta uk-text-muted uk-margin-bottom'>
				<span class='sc-location'><%= card.location %></span>  |  <span><%= card.updated_at.strftime("Updated on %B %d, %Y")%></span><br>
				<span class='sc-collabos'>
					<i class='fa fa-users uk-text-muted uk-text-small' data-uk-tooltip title="Project collaborators"></i>  
					<% card.collaborator_list.each do |collabo| %>
							<a href="/users_profiles/<%=collabo[0]%>"><%=collabo[1]%></a>   
					<% end %>
				</span> 
			</div>
			<div class='sc-tags uk-subnav uk-text-small uk-width-6-10 uk-float-left uk-text-nowrap'>
				<span class='uk-text-small'><i class='fa fa-tag uk-text-muted'></i></span>
				<% card.taglist.each do |tag| %>
					<a class='uk-text-muted' href='/search/<%=tag.name%>'><%=tag.name%></a>
				<% end %>
			</div>
		</div>
	</div>
</article>


