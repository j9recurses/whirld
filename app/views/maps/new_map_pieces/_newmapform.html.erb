<%= form_for @map, :html => { :id => 'project-create' } do |f| %>
  <%= render 'layouts/error_messages', object: f.object %>
  <div class='row group'>
    <div class='twelve columns'>
      <h1 class='project-title first-header'>
        <%=  f.text_field :name,
                         :id => 'name',
                         :name => 'name',
                         :placeholder => 'Title',
                         :maxlength => 70 %>
        <span class='font_small light hidden' data-limit='70'>70</span>
      </h1>
    </div>
  </div>


  <div class='row group'>
       <a class='user-meta eight columns' href='users/:id'>
        <div class='image profile-thumb'>
           <img src='https://s-media-cache-ak0.pinimg.com/avatars/kbasye_1391702042_30.jpg'/>
        </div>
        <span class='user-meta h3-size'>
          <%=current_user.login%>
        </span>
      </a>
      <div class='four columns'>
        <%= f.text_field :location,
                       :class => 'user-meta h3-size',
                       :placeholder => 'Project Location' %>
        <%#= f.label :latitude %>
        <%= f.text_field :lat,
                       :class => 'user-meta pull-left',
                       :placeholder => 'Latitude'%>
        <%#= f.label :longitude %>
        <%= f.text_field :lon,
                         :class => 'user-meta pull-right',
                         :placeholder => 'Longitude' %>
      </div>
  </div>
  <div class='row group'>
    <p class='project-description'>
        <%= f.text_field :description,
                         :class => 'char-limited',
                         :placeholder => 'Describe your project.',
                         :maxlength => 550 %>
        <span class='light hidden' data-limit='550'>550</span>
    </p>
  </div>
  <button class='next'>
    <%= f.submit "Next" %>
  </button>

<% end %>